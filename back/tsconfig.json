{
  "compilerOptions": {

    "target": "es2020",                                 
    "module": "commonjs",                              
    "esModuleInterop": true,                             
    "strict": true,                                     
    "skipLibCheck": true ,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@errors/*": ["errors/*"],
      "@utils/*": ["utils/*"]
    },
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false,
                                                       
  }
}
